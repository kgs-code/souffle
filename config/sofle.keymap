#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/ext_power.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/outputs.h>
#include <dt-bindings/zmk/rgb.h>

#define BASE 0
#define LOWER 1
#define RAISE 2
#define ADJUST 3

/ {
    // Activate ADJUST layer by pressing raise and lower

    conditional_layers { compatible = "zmk,conditional-layers"; };

    combos {
        compatible = "zmk,combos";

        combo3 {
            bindings = <&to 6>;
            key-positions = <53 54>;
        };

        layer_2 {
            bindings = <&to 2>;
            key-positions = <53 52>;
        };

        layer_3 {
            bindings = <&to 3>;
            key-positions = <52 54>;
        };

        default {
            bindings = <&to 0>;
            key-positions = <53 54 52>;
        };

        layer_4 {
            bindings = <&to 4>;
            key-positions = <55 56>;
        };

        layer_5 {
            bindings = <&to 5>;
            key-positions = <56 57>;
        };

        layer_66 {
            bindings = <&to 6>;
            key-positions = <57 55>;
        };

        layer_0 {
            bindings = <&to 0>;
            key-positions = <55 56 57>;
        };
    };

    macros {
        symbol201502: symbol201502 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&kp N2 &kp N0 &kp N1 &kp N5 &kp N0 &kp N2>,
                <&macro_wait_time 30>;

            label = "SYMBOL201502";
        };

        symbol_home: symbol_home {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&kp LS(D) &kp LS(L) &kp LS(G) &kp LS(U) &kp LS(S) &kp D &kp I &kp D &kp N5 &kp N6>,
                <&macro_wait_time 30>;

            label = "SYMBOL_HOME";
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            display-name = "default";

            // ------------------------------------------------------------------------------------------------------------
            // |   `   |  1  |  2  |  3   |  4   |  5   |                   |  6   |  7    |  8    |  9   |   0   |       |
            // |  ESC  |  Q  |  W  |  E   |  R   |  T   |                   |  Y   |  U    |  I    |  O   |   P   | BKSPC |
            // |  TAB  |  A  |  S  |  D   |  F   |  G   |                   |  H   |  J    |  K    |  L   |   ;   |   '   |
            // | SHIFT |  Z  |  X  |  C   |  V   |  B   |  MUTE  |  |       |  N   |  M    |  ,    |  .   |   /   | SHIFT |
            //               | GUI | ALT  | CTRL | LOWER|  ENTER |  | SPACE | RAISE| CTRL  | ALT   | GUI  |

            bindings = <
&kp ESCAPE           &kp N1  &kp N2    &kp N3    &kp N4     &kp N5                                 &kp N6     &kp N7    &kp N8     &kp N9     &kp N0    &kp BACKSPACE
&kp TAB              &kp Q   &kp W     &kp E     &kp R      &kp T                                  &kp Y      &kp U     &kp I      &kp O      &kp P     &kp APOSTROPHE
&kp LEFT_SHIFT       &kp A   &kp S     &kp D     &kp F      &kp G                                  &kp H      &kp J     &kp K      &kp L      &kp SEMI  &kp ENTER
&mt LEFT_SHIFT RALT  &kp Z   &kp X     &kp C     &kp V      &kp B      &kp C_MUTE    &out OUT_TOG  &kp N      &kp M     &kp COMMA  &kp DOT    &kp FSLH  &kp RSHFT
                             &kp LGUI  &kp LALT  &kp LCTRL  &kp SPACE  &mo 1         &mo 2         &kp ENTER  &kp RALT  &kp RGUI   &kp RCTRL
            >;

            sensor-bindings =
                <&inc_dec_kp C_VOL_DN C_VOL_UP>,
                <&inc_dec_kp LEFT_ARROW RIGHT_ARROW>;
        };

        layer_1 {
            display-name = "1";

            // TODO: Some binds are waiting for shifted keycode support.
            // ------------------------------------------------------------------------------------------------------------
            // |       |  F1 |  F2 |  F3  |  F4  |  F5  |                   |  F6  |  F7   |  F8   |  F9  |  F10  |  F11  |
            // |   `   |  1  |  2  |  3   |  4   |  5   |                   |  6   |  7    |  8    |  9   |   0   |  F12  |
            // |       |  !  |  @  |  #   |  $   |  %   |                   |  ^   |  &    |  *    |  (   |   )   |   |   |
            // |       |  =  |  -  |  +   |  {   |  }   |        |  |       |  [   |  ]    |  ;    |  :   |   \   |       |
            //               |     |      |      |      |        |  |       |      |       |       |      |

            bindings = <
&kp TILDE  &kp F1         &kp F2        &kp F3        &kp F4        &kp F5                          &kp F6          &kp F7          &kp F8           &kp F9           &kp F10    &kp F11
&kp GRAVE  &symbol201502  &kp N7        &kp NUMBER_8  &kp NUMBER_9  &kp MINUS                       &kp N6          &kp N7          &kp N8           &kp N9           &kp N0     &kp F12
&trans     &symbol_home   &kp NUMBER_4  &kp N5        &kp NUMBER_6  &kp NUMBER_0                    &kp MINUS       &kp UP_ARROW    &kp PLUS         &kp KP_MULTIPLY  &kp SEMI   &kp APOS
&trans     &trans         &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &kp PERIOD    &trans    &trans  &kp LEFT_ARROW  &kp DOWN_ARROW  &kp RIGHT_ARROW  &kp COLON        &kp TILDE  &kp GRAVE
                          &trans        &trans        &trans        &trans        &trans    &trans  &trans          &trans          &trans           &trans
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
        };

        layer_2 {
            display-name = "2";

            // ------------------------------------------------------------------------------------------------------------
            // | BTCLR | BT1  | BT2  |  BT3  |  BT4  |  BT5 |                |      |      |       |      |       |       |
            // |       | INS  | PSCR | GUI   |       |      |                | PGUP |      |   ^   |      |       |       |
            // |       | ALT  | CTRL | SHIFT |       | CAPS |                | PGDN |   <- |   v   |  ->  |  DEL  | BKSPC |
            // |       | UNDO | CUT  | COPY  | PASTE |      |      |  |      |      |      |       |      |       |       |
            //                |      |       |       |      |      |  |      |      |      |       |      |

            bindings = <
&bt BT_CLR  &bt BT_SEL 0     &bt BT_SEL 1  &bt BT_SEL 2    &bt BT_SEL 3    &bt BT_SEL 4                       &trans          &trans          &trans           &trans                &trans                 &kp BACKSPACE
&trans      &trans           &trans        &trans          &trans          &trans                             &kp PG_UP       &trans          &kp UP           &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &trans
&trans      &kp EQUAL        &kp PLUS      &kp EQUAL       &kp UP_ARROW    &kp UNDER                          &kp MINUS       &kp UP_ARROW    &kp EQUAL        &kp LEFT_BRACE        &kp RIGHT_BRACE        &trans
&trans      &kp KP_MULTIPLY  &kp SLASH     &kp LEFT_ARROW  &kp DOWN_ARROW  &kp RIGHT_ARROW  &trans    &trans  &kp LEFT_ARROW  &kp DOWN_ARROW  &kp RIGHT_ARROW  &kp LEFT_BRACKET      &kp RIGHT_BRACKET      &kp TILDE
                             &trans        &trans          &trans          &trans           &trans    &trans  &trans          &trans          &trans           &trans
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
        };

        layer_3 {
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans                    &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans                    &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans                    &trans  &trans  &trans  &trans  &trans  &trans
&trans  &to 5   &to 4   &to 1   &to 2   &to 0   &trans    &trans  &trans  &trans  &trans  &trans  &trans  &trans
                &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans
            >;

            label = "3";
        };

        layer_4 {
            // ----------------------------------------------------------------------------------------------------------------------------
            // | BTCLR  |  BT1    |  BT2    |   BT3   |   BT4   |   BT5   |                  |      |      |       |      |       |       |
            // | EXTPWR | RGB_HUD | RGB_HUI | RGB_SAD | RGB_SAI | RGB_EFF |                  |      |      |       |      |       |       |
            // |        | RGB_BRD | RGB_BRI |         |         |         |                  |      |      |       |      |       |       |
            // |        |         |         |         |         |         | RGB_TOG | |      |      |      |       |      |       |       |
            //                    |         |         |         |         |         | |      |      |      |       |      |

            display-name = "4";
            bindings = <
&bt BT_CLR         &bt BT_SEL 0     &bt BT_SEL 1     &bt BT_SEL 2     &bt BT_SEL 3     &bt BT_SEL 4                               &none  &none  &none  &none  &none  &none
&ext_power EP_TOG  &rgb_ug RGB_HUD  &rgb_ug RGB_HUI  &rgb_ug RGB_SAD  &rgb_ug RGB_SAI  &rgb_ug RGB_EFF                            &none  &none  &none  &none  &none  &none
&none              &rgb_ug RGB_BRD  &rgb_ug RGB_BRI  &none            &none            &none                                      &none  &none  &none  &none  &none  &none
&none              &to 5            &to 0            &to 1            &to 2            &to 3            &rgb_ug RGB_TOG    &none  &none  &none  &none  &none  &none  &none
                                    &none            &none            &none            &none            &none              &none  &none  &none  &none  &none
            >;
        };

        layer_5 {
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans                    &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans                    &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &to 2   &to 1                     &trans  &trans  &trans  &trans  &trans  &trans
&trans  &to 0   &to 4   &to 1   &to 2   &to 0   &trans    &trans  &trans  &trans  &trans  &trans  &trans  &trans
                &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans
            >;

            label = "5";
        };

        layer_6 {
            display-name = "6";
            bindings = <
&trans     &kp F1     &kp F2     &kp F3    &kp F4    &kp F5                      &kp F6     &kp F7    &kp F8     &kp F9     &kp F10   &kp F11
&kp GRAVE  &kp N1     &kp N2     &kp N3    &kp N4    &kp N5                      &kp N6     &kp N7    &kp N8     &kp N9     &kp N0    &kp F12
&trans     &to 5      &to 4      &to 3     &to 2     &to 1                       &kp CARET  &kp AMPS  &kp ASTRK  &kp LPAR   &kp RPAR  &kp PIPE
&trans     &kp EQUAL  &kp MINUS  &kp PLUS  &kp LBRC  &kp RBRC  &trans    &trans  &kp LBKT   &kp RBKT  &kp SEMI   &kp COLON  &kp BSLH  &trans
                      &trans     &trans    &trans    &trans    &trans    &trans  &trans     &trans    &trans     &trans
            >;

            sensor-bindings =
                <&inc_dec_kp C_VOL_UP C_VOL_DN>,
                <&inc_dec_kp PG_UP PG_DN>;
        };
    };
};
